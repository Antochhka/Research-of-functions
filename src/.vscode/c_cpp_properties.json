{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",
                "/usr/local/include",
                "/usr/include/c++/11",         // Убедитесь в правильности версии
                "/usr/include/x86_64-linux-gnu/c++/11"  // Иногда требуется этот путь
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c11",
            "cppStandard": "c++23",            // Убедитесь, что ваш компилятор поддерживает C++23
            "intelliSenseMode": "linux-gcc-x64",
            "defines": [
                "VERSION=1"
            ]
        }
    ],
    "version": 4
}
